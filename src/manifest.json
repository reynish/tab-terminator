{
    "manifest_version": 3,
    "name": "Tab Terminator",
    "version": "1.0",
    "description": "A Chrome extension that automatically closes tabs that have not been accessed for a specified amount of time.",
    "permissions": ["tabs", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    }
}
